<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_logo"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_menu_send" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_name"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/text_type"
        app:layout_constraintLeft_toRightOf="@+id/image_logo"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/image_logo"
        android:layout_marginTop="0dp"
        tools:text="Chipolte"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_type"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        style="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintBottom_toBottomOf="@+id/image_logo"
        app:layout_constraintLeft_toLeftOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        tools:text="Mexican"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="8dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/image_favorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitCenter"
        style="?borderlessButtonStyle"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        tools:src="@drawable/ic_star_24dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_status"
        android:layout_width="96dp"
        android:layout_height="24dp"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="@+id/image_favorite"
        tools:text="33 mins"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/image_favorite"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/image_favorite" />

</android.support.constraint.ConstraintLayout>